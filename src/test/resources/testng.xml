<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">


<suite name="Suite" verbose="1" parallel="tests">

    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>

    <test name="Regression 1">
        <parameter name="portNumber" value="5001"/>
        <parameter name="deviceName" value="wasa 1"/>
        <parameter name="platformVersion" value="15"/>
        <classes>
            <class name="com.mobile.app.OpenTheAppTest"/>
        </classes>
    </test>

    <test name="Regression 2">
        <parameter name="portNumber" value="5000"/>
        <parameter name="deviceName" value="wasa 3"/>
        <parameter name="platformVersion" value="14"/>
        <classes>
            <class name="com.mobile.app.NavigationTest"/>
        </classes>
    </test>
</suite>